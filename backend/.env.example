# ============================================
# VistoriaPro Backend - Environment Variables
# ============================================
# 
# Copie este arquivo para .env e preencha com seus valores reais
# NUNCA faça commit do arquivo .env com dados reais!

# ============= SERVIDOR =============
NODE_ENV=development
PORT=3000
DEBUG=vistoriapro:*

# ============= DATABASE =============
# PostgreSQL Connection String (PREFERIDO em produção)
# Formato: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:sua_senha_segura@localhost:5432/vistoriapro

# OU use variáveis individuais (DESENVOLVIMENTO)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=sua_senha_segura
DB_NAME=vistoriapro

# Alternativa: URL de conexão completa (comentar acima se usar esta)
# DATABASE_URL=postgresql://usuario:senha@host:porta/banco

# ============= AUTENTICAÇÃO =============
# JWT Secret - Use uma chave forte e aleatória em produção
# Gerar: openssl rand -hex 32 ou node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=sua-chave-super-segura-com-muitos-caracteres-aleatorios
JWT_EXPIRES_IN=7d

# ============= SUPABASE =============
# Para storage de arquivos e autenticação
# Obtenha em: https://supabase.com/dashboard/project/SEU_PROJETO/settings/api
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_API_KEY=sua-chave-api-supabase-publica
SUPABASE_SERVICE_KEY=sua-chave-secreta-do-serviço

# ============= AWS S3 (Opcional) =============
# Se usando AWS S3 para storage de arquivos
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=seu-access-key
AWS_SECRET_ACCESS_KEY=seu-secret-key
S3_BUCKET_NAME=seu-bucket-name

# ============= LOGGING =============
LOG_DIR=./logs
LOG_LEVEL=info
LOG_FILE=app.log
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# ============= CORS =============
# URLs permitidas para requisições frontend
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,https://vistoriapro.netlify.app

# ============= EMAIL (Opcional) =============
# Para envio de notificações
SMTP_HOST=smtp.seuservidor.com
SMTP_PORT=587
SMTP_USER=seu-email@dominio.com
SMTP_PASSWORD=sua-senha-email
SMTP_FROM=noreply@vistoriapro.com

# ============= VALIDAÇÃO =============
# Validação rigorosa de senhas
STRICT_PASSWORD_VALIDATION=false

# ============= SEGURANÇA =============
# Disable SSL verification (NUNCA EM PRODUÇÃO!)
NODE_TLS_REJECT_UNAUTHORIZED=1

# ============= DESENVOLVIMENTO =============
# Valores típicos para desenvolvimento local
# NODE_ENV=development
# PORT=3000
# ENABLE_FILE_LOGGING=true

# ============= STAGING/PRODUÇÃO =============
# Valores típicos para staging/produção
# NODE_ENV=production
# STRICT_PASSWORD_VALIDATION=true
# NODE_TLS_REJECT_UNAUTHORIZED=1
# LOG_LEVEL=error
# ENABLE_FILE_LOGGING=true
# ENABLE_CONSOLE_LOGGING=false
